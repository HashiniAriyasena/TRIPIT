<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailsActivity">

    <ImageView
        android:id="@+id/shop_detail_image"
        android:layout_width="364dp"
        android:layout_height="153dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp" />
    <TextView
        android:id="@+id/shop_detail_nam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        android:text="@string/category"
        android:layout_below="@+id/shop_detail_image"
        />

    <TextView
        android:id="@+id/shop_detail_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="@string/price"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/cardview_dark_background"
        android:textAlignment="center"
        android:layout_below="@+id/shop_detail_nam"
        />

    <TextView
        android:id="@+id/shop_detail_description"
        android:layout_width="367dp"
        android:layout_height="37dp"
        android:layout_below="@+id/shop_detail_price"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:text="@string/descriptionItem"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        android:textAlignment="center"
        />


    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_detail_description"
        android:layout_marginTop="5dp"
        android:elevation="6dp"
        android:gravity="center"
        app:backGroundColor="@color/colorblue"
        app:finalNumber="10"
        app:initialNumber="1"
        app:textSize="16sp">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/AddToCartButtontest"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_below="@+id/number_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="272dp"
        android:text="Button" />

    <Button
        android:id="@+id/AddToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/number_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="152dp"
        android:text="Add To Cart" />

</RelativeLayout>