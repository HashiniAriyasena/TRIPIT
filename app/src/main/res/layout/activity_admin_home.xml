<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHome"
    android:background="@drawable/userhome"
    >

    <TextView
        android:id="@+id/welcomeadmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adminwelcome"
        android:textSize="25sp"
        android:textColor="@color/colorblue"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp"
        android:textAlignment="center"
        />


    <Button
        android:id="@+id/logout_btn_admin"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttons"
        android:text="@string/logout"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/btn_admin_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="@string/places"
        android:textColor="@color/colorblue"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/welcomeadmin"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/btn_admin_guides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="@string/guides"
        android:textColor="@color/colorblue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/btn_admin_places"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/btn_admin_hotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="@string/hotels"
        android:textColor="@color/colorblue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/btn_admin_guides"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/btn_admin_shops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="@string/shops"
        android:textColor="@color/colorblue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/btn_admin_hotels"
        android:textStyle="bold"
        android:textSize="16sp"
        />



</RelativeLayout>